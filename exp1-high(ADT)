#include <stdio.h>

int i = 0;
int Index = 0;
int size = 0;
int elements[1000];
int ch = -1;

void insert() {
    printf("Enter element: ");
    scanf("%d", &elements[size]);
    printf("Inserted: %d\n", elements[size]);
    size++;
}

void Delete() {
    printf("Enter the index of element to delete [0 to %d]: ", size - 1);
    scanf("%d", &Index);
    if (Index >= 0 && Index < size) {
        for (i = Index; i < size - 1; i++) {
            elements[i] = elements[i + 1];
        }
        size--;
        printf("The element has been deleted.\n");
    } else {
        printf("Invalid index.\n");
    }
}

void search() {
    int target;
    printf("Enter the element to search: ");
    scanf("%d", &target);
    int found = 0;
    for (i = 0; i < size; i++) {
        if (target == elements[i]) {
            printf("Index %d : %d\n", i, elements[i]);
            found = 1;
        }
    }
    if (!found)
        printf("Element not found.\n");
}

void display() {
    printf("All elements:\n");
    for (i = 0; i < size; i++) {
        printf("%d ", elements[i]);
    }
    printf("\n");
}

void displayeven() {
    printf("Even elements:\n");
    for (i = 0; i < size; i++) {
        if (elements[i] % 2 == 0) {
            printf("%d ", elements[i]);
        }
    }
    printf("\n");
}

void sum_of_even() {
    int evensum = 0;
    for (i = 0; i < size; i++) {
        if (elements[i] % 2 == 0) {
            evensum += elements[i];
        }
    }
    printf("The sum of even elements: %d\n", evensum);
}

void reverse() {
    printf("Elements in reverse order:\n");
    for (i = size - 1; i >= 0; i--) {
        printf("%d ", elements[i]);
    }
    printf("\n");
}

int main() {
    while (ch != 9) {
        printf("\n1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Search\n");
        printf("5. Display even elements only\n");
        printf("6. Calculate the sum of even elements\n");
        printf("7. Display the elements in the reverse order\n");
        printf("9. Exit\n");

        printf("Enter your choice: ");
        scanf("%d", &ch);

        switch (ch) {
            case 1:
                insert();
                break;
            case 2:
                Delete();
                break;
            case 3:
                display();
                break;
            case 4:
                search();
                break;
            case 5:
                displayeven();
                break;
            case 6:
                sum_of_even();
                break;
            case 7:
                reverse();
                break;
            case 8:
                printf("Exiting program.\n");
                break;
            default:
                printf("Wrong selection.\n");
        }
    }

    return 0;
}

